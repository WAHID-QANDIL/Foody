<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_meal"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    >

        <!-- ConstraintLayout inside card keeps hierarchy flat -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sub_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- Meal Image -->
            <FrameLayout
                android:id="@+id/img_meal_container"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <ImageView
                    android:id="@+id/img_meal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_placeholder"
                    android:contentDescription="Meal image"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/random_meal_card_gradent"
                    app:layout_constraintBottom_toBottomOf="parent" />


            </FrameLayout>



            <!-- Chef Selection Badge -->
            <TextView
                android:id="@+id/txt_chef_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHEF'S SELECTION"
                android:textSize="10sp"
                android:textAllCaps="true"
                android:layout_margin="@dimen/medium_padding"
                android:textColor="@color/white"
                android:background="@drawable/bg_badge_red"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                app:layout_constraintTop_toTopOf="@id/img_meal_container"
                app:layout_constraintStart_toStartOf="@id/img_meal_container"
                />

            <!-- Meal Name -->
            <TextView
                android:id="@+id/txt_meal_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Zesty Lime\nSalmon"
                android:textSize="24sp"
                android:layout_margin="@dimen/medium_padding"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/img_meal_container"
                app:layout_constraintStart_toStartOf="@id/img_meal_container"
                app:layout_constraintEnd_toEndOf="@id/img_meal_container"
                />


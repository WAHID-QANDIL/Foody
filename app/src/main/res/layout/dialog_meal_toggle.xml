<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/mealToggleGroup"
        android:layout_width="match_parent"
        android:outlineSpotShadowColor="@color/divider"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBreakfast"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColorHighlight="@color/colorPrimaryLight"
            app:cornerRadius="@dimen/medium_padding"
            app:rippleColor="@color/colorPrimaryLight"
            android:layout_width="0dp"
            android:outlineSpotShadowColor="@color/primary"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Breakfast" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLunch"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:outlineSpotShadowColor="@color/primary"
            android:textColorHighlight="@color/colorPrimaryLight"
            app:rippleColor="@color/colorPrimaryLight"
            android:text="Lunch" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDinner"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="@dimen/medium_padding"
            android:outlineSpotShadowColor="@color/primary"
            app:rippleColor="@color/colorPrimaryLight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dinner" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>
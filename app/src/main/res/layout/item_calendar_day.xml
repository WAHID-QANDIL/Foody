<?xml version="1.0" encoding="utf-8"?>
    <!-- ============== Material Calendar Entry ============== -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCalendar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:rippleColor="@color/colorPrimaryLight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_calendar_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivCalendarIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_calander"
            app:tint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Today"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintStart_toEndOf="@id/ivCalendarIcon"
            app:layout_constraintEnd_toStartOf="@id/ivCalendarChevron"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvSelectedSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tap to change date"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="@id/tvSelectedDate"
            app:layout_constraintTop_toBottomOf="@id/tvSelectedDate"/>

        <ImageView
            android:id="@+id/ivCalendarChevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/outline_chevron_right_24"
            app:tint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
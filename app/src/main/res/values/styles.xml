<resources>

    <style name="Widget.Theme.Foody.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AuthInputStyle">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:padding">14dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.App.TextInputLayout.Filled"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <!-- Background color -->
        <item name="boxBackgroundColor">@color/white</item>

        <!-- Corner radius -->
        <item name="boxCornerRadiusTopStart">@dimen/medium_padding</item>
        <item name="boxCornerRadiusTopEnd">@dimen/medium_padding</item>
        <item name="boxCornerRadiusBottomStart">@dimen/medium_padding</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/medium_padding</item>

        <!-- Stroke colors -->
        <item name="boxStrokeColor">@color/colorPrimaryLight</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- Hint & label -->
        <item name="hintTextColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textPrimary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>

    </style>

    <style name="App.CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorAccent</item>
        <item name="marginHorizontal">12dp</item>
        <item name="height">32dp</item>
    </style>
</resources>